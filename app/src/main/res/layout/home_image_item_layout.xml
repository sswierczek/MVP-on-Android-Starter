<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_image_item_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/home_image_item_height"
    android:layout_gravity="center"
    card_view:cardCornerRadius="@dimen/home_image_item_layout_cornet_radius"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/home_image_item_thumbnail"
            android:layout_width="@dimen/home_image_item_thumbnail_size"
            android:layout_height="@dimen/home_image_item_thumbnail_size"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/home_image_item_thumbnail_margin"
            tools:ignore="ContentDescription"
            tools:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/home_image_item_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            tools:text="Placeholder image title" />
    </LinearLayout>

</android.support.v7.widget.CardView>
